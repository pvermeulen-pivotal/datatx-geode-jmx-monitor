<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>package</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>monitor/lib</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>monitor</directory>
			<outputDirectory>monitor</outputDirectory>
			<includes>
				<include>**/*.sh</include>
			</includes>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>monitor/conf</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>monitor/logs/</directory>
			<outputDirectory>monitor/logs</outputDirectory>
			<excludes>
				<exclude>**/*.log</exclude>
				<exclude>**/*.gfs</exclude>
			</excludes>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
		</fileSet>
	</fileSets>
</assembly>
